{
  "include": [
    "./**/*.d.ts",
    "./**/*.ts"
  ],
  "exclude": [
    "../node_modules",
    "../dist"
  ],
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "office-js"
    ],
    "target": "es2015",
    "lib": ["es2015", "dom"],
    "moduleResolution": "node",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
  }
}